@model IEnumerable<NerdStore.Catalago.Application.ViewModels.ProdutoViewModel>

@{
    ViewData["Title"] = "Vitrine";
}
<style>
    h4 {
        font-weight: 600;
    }

    p {
        font-size: 12px;
        margin-top: 5px;
    }

    .price {
        font-size: 30px;
        margin: 0 auto;
        color: #333;
    }

    .right {
        float: right;
        border-bottom: 2px solid #4B8E4B;
    }

    .thumbnail {
        opacity: 0.70;
        -webkit-transition: all 0.5s;
        transition: all 0.5s;
    }

        .thumbnail:hover {
            opacity: 1.00;
            box-shadow: 0px 0px 10px #4bc6ff;
        }

    .line {
        margin-bottom: 5px;
    }

    @@media screen and (max-width: 770px) {
        .right {
            float: left;
            width: 100%;
        }
    }

    .product_view .modal-dialog {
        max-width: 800px;
        width: 100%;
    }

    .pre-cost {
        text-decoration: line-through;
        color: #a5a5a5;
    }

    .space-ten {
        padding: 10px 0;
    }
</style>
<div class="container">

    <h1>Administração de Produtos</h1>
    <hr />

    <div class="row">
        <div class="col-12">   
            <a asp-controller="AdminProdutos" asp-action="NovoProduto" class="btn btn-primary">+ Adicionar Novo</a>
        </div>
    </div>

    <hr />
    <div class="row">
        @{
            foreach (var produto in Model.OrderBy(p => p.CategoriaId))
            {
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="thumbnail d-flex flex-column h-100">

                        <img width="200" height="200" class="mx-auto" src="~/Images/@produto.Imagem" />

                        <h4>@produto.Nome</h4>

                        <p>@produto.QuantidadeEstoque em estoque</p>

                        <p class="flex-grow-1">
                            @produto.Descricao
                        </p>

                        <p class="price">@produto.Valor.ToString("C")</p>

                        <hr class="line">

                        <div class="row g-2">
                            <div class="col-6">
                                <a asp-controller="AdminProdutos"
                                   asp-action="AtualizarProduto"
                                   asp-route-id="@produto.Id"
                                   class="btn btn-success w-100 text-truncate">
                                    Editar
                                </a>
                            </div>

                            <div class="col-6">
                                <a asp-controller="AdminProdutos"
                                   asp-action="AtualizarEstoque"
                                   asp-route-id="@produto.Id"
                                   class="btn btn-info w-100 text-truncate">
                                    Estoque
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            }
        }
    </div>
</div>

